<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cjl.basic.zone.project.menu.mapper.ZMenuMapper">
    <resultMap id="BaseResultMap" type="com.cjl.basic.zone.project.menu.domain.ZMenu">
        <id column="menu_id" jdbcType="INTEGER" property="menuId"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="parent_id" jdbcType="INTEGER" property="parentId"/>
        <result column="parentName" jdbcType="VARCHAR" property="parentName"/>
        <result column="href" jdbcType="VARCHAR" property="href"/>
        <result column="icon" jdbcType="VARCHAR" property="icon"/>
        <result column="type" jdbcType="INTEGER" property="type"/>
        <result column="open_type" jdbcType="VARCHAR" property="openType"/>
        <result column="visible" jdbcType="INTEGER" property="visible"/>
        <result column="checkArr" jdbcType="VARCHAR" property="checkArr"/>
        <result column="role_id" jdbcType="INTEGER" property="roleId"/>
        <result column="order_num" jdbcType="VARCHAR" property="orderNum"/>
    </resultMap>
    <sql id="Base_Column_List">
        menu_id, title, parent_id, href, icon, `type`, order_num,visible,open_type, '0' checkArr
    </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
       select  zm.menu_id,
               zm.title,
               zm.parent_id,
               zm.href,
               zm.icon,
               zm.`type`,
               zm.order_num,
               open_type,
               zm.visible,
               (
                   select title
                   from z_menu
                   where menu_id = zm.parent_id
               ) parentName
        from z_menu zm
        where zm.menu_id = #{menuId}
             ORDER BY order_num
    </select>
    <select id="selectMenuList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from z_menu
        <where>
            <if test="title !=null and title !=''">title like concat('%',#{title},'%')</if>
            <if test="orderNum !=null and orderNum !=''">AND order_num =#{orderNum}</if>
        </where>
        ORDER BY order_num
    </select>
    <select id="selectMenuTree" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from z_menu
        <where>
            visible = 1
            <if test="title !=null and title !=''">AND title like concat('%',#{title},'%')</if>
            <if test="orderNum !=null and orderNum !=''">AND order_num =#{orderNum}</if>
        </where>
        ORDER BY order_num,parent_id
    </select>
    <select id="selectUserMenu" resultMap="BaseResultMap">
          select zm.menu_id,
               zm.title,
               zm.parent_id,
               zm.href,
               zm.icon,
               zm.`type`,
               zm.order_num,
               zm.visible,
               zrm.role_id,
               zm.open_type
        from z_menu zm
                 left join z_role_menu zrm on zrm.menu_id = zm.menu_id
                 left join z_role zr on zr.z_role_id = zrm.role_id
                 left join z_user_role zur on zrm.role_id = zur.role_id
        where zm.visible = 1
          AND zur.account_id=#{accountId}
    </select>
    <select id="checkArrMenuTree" resultMap="BaseResultMap">
           select zm.menu_id,
               zm.title,
               zm.parent_id,
               zm.href,
               zm.icon,
               zm.`type`,
               zm.order_num,
               zm.visible,
               zm.open_type,
               if(zrm.menu_id = zm.menu_id, '1', '0') checkArr
        from z_menu zm
                 left join z_role_menu zrm on zrm.menu_id = zm.menu_id AND zrm.role_id=#{roleId}
        where visible = 1
        ORDER BY zm.menu_id, parent_id, order_num
    </select>
    <select id="selectMenuListByRole" resultType="com.cjl.basic.zone.project.menu.domain.ZRoleMenu">
        select
        <include refid="Base_Column_List"/>
        from z_role_menu
        where z_role_id = #{roleId}
        ORDER BY order_num
    </select>
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from z_menu
    where menu_id = #{menuId,jdbcType=INTEGER}
  </delete>
    <insert id="insertSelective" keyColumn="menu_id" keyProperty="menuId"
            parameterType="com.cjl.basic.zone.project.menu.domain.ZMenu" useGeneratedKeys="true">
        insert into z_menu
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">
                title,
            </if>
            <if test="parentId != null">
                parent_id,
            </if>
            <if test="href != null">
                href,
            </if>
            <if test="icon != null">
                icon,
            </if>
            <if test="type != null">
                `type`,
            </if>
            <if test="orderNum != null">
                order_num,
            </if>
            <if test="visible != null">
                visible,
            </if>
            <if test="openType != null">
                open_type,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null">
                #{title,jdbcType=VARCHAR},
            </if>
            <if test="parentId != null">
                #{parentId,jdbcType=INTEGER},
            </if>
            <if test="href != null">
                #{href,jdbcType=VARCHAR},
            </if>
            <if test="icon != null">
                #{icon,jdbcType=VARCHAR},
            </if>
            <if test="type != null">
                #{type,jdbcType=INTEGER},
            </if>
            <if test="orderNum != null">
                #{orderNum,jdbcType=VARCHAR},
            </if>
            <if test="visible != null">
                #{visible,jdbcType=INTEGER},
            </if>
            <if test="openType != null">
                #{openType,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.cjl.basic.zone.project.menu.domain.ZMenu">
        update z_menu
        <set>
            <if test="title != null">
                title = #{title,jdbcType=VARCHAR},
            </if>
            <if test="parentId != null">
                parent_id = #{parentId,jdbcType=INTEGER},
            </if>
            <if test="href != null">
                href = #{href,jdbcType=VARCHAR},
            </if>
            <if test="icon != null">
                icon = #{icon,jdbcType=VARCHAR},
            </if>
            <if test="type != null">
                `type` = #{type,jdbcType=INTEGER},
            </if>
            <if test="orderNum != null">
                order_num = #{orderNum,jdbcType=VARCHAR},
            </if>
            <if test="visible != null">
                visible = #{visible,jdbcType=INTEGER},
            </if>
            <if test="openType != null">
                open_type = #{openType,jdbcType=INTEGER},
            </if>
        </set>
        <where>
            menu_id = #{menuId,jdbcType=INTEGER}
        </where>
    </update>

</mapper>