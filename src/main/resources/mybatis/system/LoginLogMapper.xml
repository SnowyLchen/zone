<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cjl.basic.zone.project.loginLog.mapper.LoginLogMapper">
    <!--表名-->
    <sql id="BASE_TABLE">
        z_login_logs
    </sql>

    <!--基本列-->
    <sql id="BASE_COLUMN">
         action, data, account_id, ip, login_time,status,login_location,browser,os
    </sql>

    <!--添加日志-->
    <insert id="addLog" parameterType="com.cjl.basic.zone.project.loginLog.domain.LoginLog">
        INSERT INTO
        <include refid="BASE_TABLE"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <include refid="BASE_COLUMN"/>
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            #{action, jdbcType=VARCHAR},
            #{data, jdbcType=VARCHAR},
            #{accountId, jdbcType=INTEGER},
            #{ip, jdbcType=VARCHAR},
            now(),
            #{status},
            #{loginLocation},
            #{browser},
            #{os}
        </trim>
    </insert>

    <select id="getLogs" resultType="com.cjl.basic.zone.project.loginLog.domain.LoginLog">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
        AS l
        ORDER BY
        l.id DESC
    </select>


</mapper>